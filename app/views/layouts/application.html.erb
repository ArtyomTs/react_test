<!DOCTYPE html>
<html>
  <head>
    <title>ReactTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="header">
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "right") if user_signed_in? %>
    </div>
    <%- if flash[:notice] %>
      <p class="notice"><%= notice %></p>
    <%- end %>
    <%- if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <%- end %>
    <%= yield %>
  </body>
</html>
